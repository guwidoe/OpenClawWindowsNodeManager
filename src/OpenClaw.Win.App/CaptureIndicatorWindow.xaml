<Window x:Class="OpenClaw.Win.App.CaptureIndicatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Width="260"
        Height="50"
        Background="#AA1D1D"
        AllowsTransparency="True">
    <Border Background="#CC1D1D" BorderBrush="#FF5E5E" BorderThickness="1" CornerRadius="8" Padding="10">
        <TextBlock x:Name="IndicatorText"
                   Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Text="Screen capture active" />
    </Border>
</Window>

<Window x:Class="OpenClaw.Win.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenClaw.Win.App"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="OpenClaw Windows Companion" Height="560" Width="820" MinHeight="520" MinWidth="760"
        Icon="pack://application:,,,/Assets/lobster.ico"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid Margin="16" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Border Padding="12" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="36"
                               Height="36"
                               Margin="0,2,12,0"
                               Stretch="Uniform"
                               Source="pack://application:,,,/Assets/lobster.png" />
                        <StackPanel>
                            <TextBlock x:Name="StatusLabel" FontSize="20" FontWeight="Bold" Text="DISCONNECTED" />
                            <TextBlock x:Name="StatusDetails" Margin="0,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}" Text="No status yet." />
                            <TextBlock x:Name="StatusError" Margin="0,4,0,0" Foreground="{DynamicResource StatusErrorBrush}" Text="" />
                            <TextBlock x:Name="LastActionText" Margin="0,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}" Text="" />
                            <StackPanel x:Name="BusyPanel" Margin="0,8,0,0" Orientation="Horizontal" Visibility="Collapsed">
                                <ProgressBar Width="140" Height="10" IsIndeterminate="True" Margin="0,0,8,0" />
                                <TextBlock x:Name="BusyText" VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="12,0,0,0">
                        <Button x:Name="ConnectButton" Width="90" Margin="0,0,8,0" Click="ConnectButton_Click">Connect</Button>
                        <Button x:Name="DisconnectButton" Width="90" Margin="0,0,8,0" Click="DisconnectButton_Click">Disconnect</Button>
                        <Button x:Name="RefreshButton" Width="90" Click="RefreshButton_Click">Refresh</Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border x:Name="TokenBanner" Margin="0,10,0,0" Padding="10" Background="{DynamicResource WarningBannerBackgroundBrush}" BorderBrush="{DynamicResource WarningBannerBorderBrush}" BorderThickness="1" CornerRadius="6" Visibility="Collapsed">
                <DockPanel>
                    <TextBlock Text="Gateway token required to verify connection. Paste it in Settings → Connection."
                               VerticalAlignment="Center" />
                    <Button x:Name="OpenTokenSettingsButton"
                            DockPanel.Dock="Right"
                            Margin="12,0,0,0"
                            Width="140"
                            Click="OpenTokenSettingsButton_Click">Open Settings</Button>
                </DockPanel>
            </Border>

            <Border x:Name="PairingBanner" Margin="0,10,0,0" Padding="10" Background="{DynamicResource InfoBannerBackgroundBrush}" BorderBrush="{DynamicResource InfoBannerBorderBrush}" BorderThickness="1" CornerRadius="6" Visibility="Collapsed">
                <DockPanel>
                    <TextBlock Text="Gateway pairing required for this device. Approve it in the Control UI (Devices) or via CLI."
                               VerticalAlignment="Center" />
                    <Button x:Name="OpenControlUiButton"
                            DockPanel.Dock="Right"
                            Margin="12,0,0,0"
                            Width="140"
                            Click="OpenControlUiButton_Click">Open Control UI</Button>
                </DockPanel>
            </Border>

            <Border x:Name="GatewayBanner" Margin="0,10,0,0" Padding="10" Background="{DynamicResource WarningBannerBackgroundBrush}" BorderBrush="{DynamicResource WarningBannerBorderBrush}" BorderThickness="1" CornerRadius="6" Visibility="Collapsed">
                <DockPanel>
                    <TextBlock Text="Gateway unreachable. Check network/Tailscale and verify gateway settings."
                               VerticalAlignment="Center" />
                    <Button x:Name="GatewayBannerTestButton"
                            DockPanel.Dock="Right"
                            Margin="12,0,0,0"
                            Width="140"
                            Click="TestGatewayButton_Click">Test Gateway</Button>
                </DockPanel>
            </Border>
        </StackPanel>

        <TabControl x:Name="MainTabs" Grid.Row="1" Margin="0,16,0,0">
            <TabItem Header="Connection">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Gateway Host" VerticalAlignment="Center" />
                            <TextBox x:Name="GatewayHostTextBox" Grid.Row="0" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Gateway Port" VerticalAlignment="Center" />
                            <TextBox x:Name="GatewayPortTextBox" Grid.Row="1" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Use TLS" VerticalAlignment="Center" />
                            <CheckBox x:Name="UseTlsCheckBox" Grid.Row="2" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="TLS Fingerprint" VerticalAlignment="Center" />
                            <TextBox x:Name="TlsFingerprintTextBox" Grid.Row="3" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Display Name" VerticalAlignment="Center" />
                            <TextBox x:Name="DisplayNameTextBox" Grid.Row="4" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Control UI URL" VerticalAlignment="Center" />
                            <TextBox x:Name="ControlUiTextBox" Grid.Row="5" Grid.Column="1" Margin="0,2" />

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Gateway Token" VerticalAlignment="Center" />
                            <StackPanel Grid.Row="6" Grid.Column="1" Margin="0,2">
                                <PasswordBox x:Name="GatewayTokenBox" />
                                <TextBlock x:Name="TokenSavedLabel" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <CheckBox x:Name="AutoStartCheckBox" Content="Start tray app at login" Margin="0,0,12,0" />
                            <TextBlock Text="Theme" VerticalAlignment="Center" Margin="0,0,6,0" />
                            <ComboBox x:Name="ThemePreferenceComboBox" Width="140" Margin="0,0,12,0">
                                <ComboBoxItem Content="System" Tag="system" />
                                <ComboBoxItem Content="Light" Tag="light" />
                                <ComboBoxItem Content="Dark" Tag="dark" />
                            </ComboBox>
                            <CheckBox x:Name="TrayNotificationsCheckBox" Content="Show tray notifications" Margin="0,0,12,0" />
                            <CheckBox x:Name="SystemNotificationsCheckBox" Content="Show system notifications" Margin="0,0,12,0" />
                            <Button x:Name="SaveConfigButton" Width="110" Click="SaveConfigButton_Click">Save</Button>
                            <Button x:Name="TestGatewayButton" Width="140" Margin="8,0,0,0" Click="TestGatewayButton_Click">Test Gateway</Button>
                        </StackPanel>

                        <GroupBox Header="Fetch Token via SSH" Margin="0,16,0,0">
                            <StackPanel Margin="8">
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="SSH Host" VerticalAlignment="Center" />
                                    <TextBox x:Name="SshHostTextBox" Grid.Row="0" Grid.Column="1" Margin="0,2" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="SSH User" VerticalAlignment="Center" />
                                    <TextBox x:Name="SshUserTextBox" Grid.Row="1" Grid.Column="1" Margin="0,2" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="SSH Port" VerticalAlignment="Center" />
                                    <TextBox x:Name="SshPortTextBox" Grid.Row="2" Grid.Column="1" Margin="0,2" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="SSH Command" VerticalAlignment="Center" />
                                    <TextBox x:Name="SshCommandTextBox" Grid.Row="3" Grid.Column="1" Margin="0,2" />
                                </Grid>

                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="FetchTokenButton" Width="160" Click="FetchTokenButton_Click">Fetch Token via SSH</Button>
                                    <TextBlock x:Name="SshFetchStatus" Margin="12,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}" />
                                </StackPanel>
                                <TextBlock Margin="0,6,0,0" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"
                                           Text="Requires key-based SSH auth (BatchMode). Password prompts are not supported." />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Node Host">
                <StackPanel Margin="8">
                    <TextBlock Text="Manage the OpenClaw node host service." />
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button x:Name="InstallButton" Width="120" Margin="0,0,8,0" Click="InstallButton_Click">Install</Button>
                        <Button x:Name="UninstallButton" Width="120" Margin="0,0,8,0" Click="UninstallButton_Click">Uninstall</Button>
                        <Button x:Name="StartButton" Width="120" Margin="0,0,8,0" Click="ConnectButton_Click">Start</Button>
                        <Button x:Name="StopButton" Width="120" Click="DisconnectButton_Click">Stop</Button>
                    </StackPanel>
                    <CheckBox x:Name="CaptureNodeOutputCheckBox"
                              Margin="0,12,0,0"
                              Content="Hide node host window and capture output" />
                    <TextBlock Margin="0,4,0,0"
                               FontSize="11"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Text="Captures the node host console output to a local log file and hides the task window." />
                </StackPanel>
            </TabItem>

            <TabItem Header="Canvas">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Padding="10"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="CanvasStatusText" FontWeight="SemiBold" Text="Canvas not initialized." />
                                <TextBlock x:Name="CanvasStatusDetails" Margin="0,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}"
                                           Text="Open this tab to load the embedded canvas." />
                            </StackPanel>
                            <Button x:Name="CanvasInstallButton"
                                    Grid.Column="1"
                                    Width="150"
                                    Margin="12,0,0,0"
                                    Visibility="Collapsed"
                                    Click="CanvasInstallButton_Click">Install WebView2</Button>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1"
                            Margin="0,12,0,12"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <wv2:WebView2 x:Name="CanvasWebView" />
                            <TextBlock x:Name="CanvasOverlayText"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Text="Canvas will appear here." />
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CanvasReloadButton" Width="120" Margin="0,0,8,0" Click="CanvasReloadButton_Click">Reload</Button>
                            <Button x:Name="CanvasSnapshotButton" Width="140" Margin="0,0,8,0" Click="CanvasSnapshotButton_Click">Capture Snapshot</Button>
                            <Button x:Name="CanvasOpenSnapshotButton" Width="160" Click="CanvasOpenSnapshotButton_Click">Open Snapshot Folder</Button>
                        </StackPanel>
                        <TextBlock x:Name="CanvasSnapshotStatus" Margin="0,6,0,0" Foreground="{DynamicResource TextSecondaryBrush}" />
                        <GroupBox Header="canvas.eval" Margin="0,12,0,0">
                            <StackPanel Margin="8">
                                <TextBox x:Name="CanvasEvalInput" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button x:Name="CanvasEvalButton" Width="120" Click="CanvasEvalButton_Click">Run JS</Button>
                                    <TextBlock x:Name="CanvasEvalStatus" Margin="12,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}" />
                                </StackPanel>
                                <TextBox x:Name="CanvasEvalOutput"
                                         Height="80"
                                         Margin="0,8,0,0"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Screen Capture" Margin="0,12,0,0">
                            <StackPanel Margin="8">
                                <StackPanel Orientation="Horizontal">
                                    <ComboBox x:Name="ScreenSelectComboBox" Width="220" Margin="0,0,8,0" />
                                    <Button x:Name="CaptureScreenButton" Width="140" Margin="0,0,8,0" Click="CaptureScreenButton_Click">Capture Screen</Button>
                                    <Button x:Name="StartRecordingButton" Width="140" Margin="0,0,8,0" Click="StartRecordingButton_Click">Start Recording</Button>
                                    <Button x:Name="StopRecordingButton" Width="140" Click="StopRecordingButton_Click">Stop Recording</Button>
                                </StackPanel>
                                <TextBlock x:Name="ScreenCaptureStatus" Margin="0,6,0,0" Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Approvals">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="Pending approvals">
                            <StackPanel Margin="8">
                                <TextBlock x:Name="PendingApprovalsSummary" Foreground="{DynamicResource TextSecondaryBrush}" Text="No pending approvals." />
                                <ListView x:Name="PendingApprovalsList" Height="160" Margin="0,8,0,0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Requested" DisplayMemberBinding="{Binding RequestedAt}" Width="140" />
                                            <GridViewColumn Header="Command" DisplayMemberBinding="{Binding Command}" Width="160" />
                                            <GridViewColumn Header="Args" DisplayMemberBinding="{Binding Arguments}" Width="260" />
                                            <GridViewColumn Header="Source" DisplayMemberBinding="{Binding RequestedBy}" Width="140" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button x:Name="ApproveRequestButton" Width="110" Margin="0,0,8,0" Click="ApproveRequestButton_Click">Approve</Button>
                                    <Button x:Name="DenyRequestButton" Width="110" Margin="0,0,8,0" Click="DenyRequestButton_Click">Deny</Button>
                                    <Button x:Name="RefreshApprovalsButton" Width="120" Click="RefreshApprovalsButton_Click">Refresh</Button>
                                </StackPanel>
                                <TextBlock Margin="0,8,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Text="Approvals appear here within seconds of request." />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Exec policy" Margin="0,12,0,0">
                            <StackPanel Margin="8">
                                <TextBlock Text="Choose how system.run requests are handled." />
                                <ComboBox x:Name="ExecPolicyComboBox" Width="260" Margin="0,6,0,0">
                                    <ComboBoxItem Content="Prompt for each request" Tag="prompt" />
                                    <ComboBoxItem Content="Always approve" Tag="allow" />
                                    <ComboBoxItem Content="Always deny" Tag="deny" />
                                </ComboBox>
                                <TextBlock x:Name="ExecPolicyHelpText"
                                           Margin="0,6,0,0"
                                           FontSize="11"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Approval history" Margin="0,12,0,0">
                            <StackPanel Margin="8">
                                <ListView x:Name="ApprovalHistoryList" Height="180">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Decided" DisplayMemberBinding="{Binding DecidedAt}" Width="140" />
                                            <GridViewColumn Header="Decision" DisplayMemberBinding="{Binding Decision}" Width="90" />
                                            <GridViewColumn Header="Command" DisplayMemberBinding="{Binding Command}" Width="160" />
                                            <GridViewColumn Header="Args" DisplayMemberBinding="{Binding Arguments}" Width="260" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <Button x:Name="RefreshApprovalHistoryButton" Width="140" Margin="0,0,8,0" Click="RefreshApprovalHistoryButton_Click">Refresh History</Button>
                                    <Button x:Name="OpenApprovalLogButton" Width="120" Click="OpenApprovalLogButton_Click">Open Log</Button>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Chrome Relay">
                <StackPanel Margin="8">
                    <Border Padding="10"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <StackPanel>
                            <TextBlock x:Name="RelayStatusTitle" FontWeight="SemiBold" Text="Relay status unknown." />
                            <TextBlock x:Name="RelayStatusDetails" Margin="0,4,0,0" Foreground="{DynamicResource TextSecondaryBrush}"
                                       Text="Click Verify to check the relay." />
                        </StackPanel>
                    </Border>
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Relay Port" VerticalAlignment="Center" />
                        <TextBox x:Name="RelayPortTextBox" Grid.Column="1" Margin="0,2" />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Button Width="160" Margin="0,0,8,0" Click="OpenExtensionsButton_Click">Open chrome://extensions</Button>
                        <Button Width="170" Margin="0,0,8,0" Click="VerifyRelayButton_Click">Verify Relay</Button>
                        <Button Width="140" Click="OpenRelayFolderButton_Click">Open Extension Folder</Button>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Logs">
                <StackPanel Margin="8">
                    <TextBlock Text="App logs and node host logs are stored locally." Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal">
                        <Button Width="140" Margin="0,0,8,0" Click="OpenLogsButton_Click">Open Logs Folder</Button>
                        <Button Width="130" Margin="0,0,8,0" Click="OpenAppLogButton_Click">Open App Log</Button>
                        <Button Width="140" Margin="0,0,8,0" Click="OpenNodeLogButton_Click">Open Node Log</Button>
                        <Button Width="160" Margin="0,0,8,0" Click="ExportDiagnosticsButton_Click">Export Diagnostics</Button>
                        <Button Width="170" Click="CopyDiagnosticsPathButton_Click">Copy Diagnostics Path</Button>
                    </StackPanel>
                    <TextBlock x:Name="DiagnosticsStatus" Margin="0,8,0,0" />
                    <TextBlock x:Name="LogsLastErrorText" Margin="0,4,0,0" Foreground="{DynamicResource StatusErrorBrush}" Text="" />
                    <GroupBox Header="Node Host Output" Margin="0,12,0,0">
                        <StackPanel Margin="8">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="OpenNodeHostLogButton" Width="160" Margin="0,0,8,0" Click="OpenNodeHostLogButton_Click">Open Node Host Log</Button>
                                <Button x:Name="RefreshNodeHostLogButton" Width="120" Click="RefreshNodeHostLogButton_Click">Refresh</Button>
                            </StackPanel>
                            <TextBox x:Name="NodeHostLogTextBox"
                                     Height="180"
                                     Margin="0,8,0,0"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     IsReadOnly="True"
                                     TextWrapping="NoWrap"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto" />
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

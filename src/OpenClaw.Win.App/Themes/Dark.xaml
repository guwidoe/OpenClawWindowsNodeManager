    <SolidColorBrush x:Key="InfoBannerBackgroundBrush" Color="#182230" />
    <SolidColorBrush x:Key="InfoBannerBorderBrush" Color="#2E4A72" />

    <SolidColorBrush x:Key="StatusConnectedBrush" Color="#42D392" />
    <SolidColorBrush x:Key="StatusDegradedBrush" Color="#F5C542" />
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#FF6B6B" />
    <SolidColorBrush x:Key="StatusIdleBrush" Color="#93A0B0" />
